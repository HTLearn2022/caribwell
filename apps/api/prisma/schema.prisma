datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String   @id @default(cuid())
  email      String   @unique
  name       String?
  password   String
  createdAt  DateTime @default(now())
  goals      Goal?
  subscription Subscription?
}

model Goal {
  id           String   @id @default(cuid())
  user         User     @relation(fields: [userId], references: [id])
  userId       String
  targetWeight Float?
  activityLevel String?
  dietaryRules  String?
}

model Subscription {
  id         String   @id @default(cuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  tier       String
  platform   String
  status     String
  renewalAt  DateTime?
}
